<div class="banner">
  <h1 class="welcome">Welcome to Mister Cocktails</h1>
  <h5 id="add-cocktail"><%= link_to "Add cocktail", new_cocktail_path %></h5>
</div>

<div class="cards-container">
    <% @cocktails.each do |cocktail| %>
      <div class="card">
        <%= cl_image_tag cocktail.photo, width: 200, height: 300, crop: :scale, vignette:30 %>
        <span><h5 class="card-title"><%= link_to cocktail.name, cocktail_path(cocktail)%></h5> </span>
      </div>
    <% end %>
</div>


